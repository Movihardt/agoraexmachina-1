<div class="card">
	<h2 class="card-header bg-secondary text-white">{{website.title}}</h2>
	<div class="card-body">
		<div class="card-img2">
			<img width="260" height="225" src="{{ asset('img/logo_aem-lg.png') }}"  class="rounded mx-auto d-block" >
		</div>
		<h2 class="card-text" style="margin-top:1em;">{{'jumbotron.1' | trans }}</h2>
		<p class="card-text">{{'jumbotron.2' | trans }}</p>
		<p class="card-text">{{'jumbotron.3' | trans }}</p>
		<p class="card-text">{{'jumbotron.4' | trans }}</p>
		<p class="card-text">{{ 'jumbotron.5' | trans |markdown_to_html  }}</p>
		<div class="d-flex justify-content-around ">
			<a class="btn btn-outline-primary" href="{{ path('app_login') }}">{{ 'signin' | trans }}</a>
			<a class="btn btn-primary" href="{{path('app_register')}}" role="button"><i class="bi bi-person-check"></i> {{'register' | trans }}</a>
		</div>

	</div>
</div>

