{% if app.user %}
    <button class="openbtn" onclick="openNav()"><i class="bi bi-info-circle"></i>
    </button>
    <div id="mySidebar" class="sidebar-left">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">Ã—</a>

        {# Mini logo avec nombre de notifications, premiere lettre du pseudo et nom d'utilisateur complet #}
        {% if app.user %}
            <button type="button" class="btn btn-link text-decoration-none no-shadow">
                {% if app.user.numberUnreadNotifications != 0 %}
                    <i class="bi bi-exclamation-circle"></i>{{ app.user.numberUnreadNotifications }}
                {% endif %}
                <div class="btn btn-light btn-outline-secondary rounded-circle avatar avatar-sm text-secondary">
                    {{ app.user.username | first | capitalize }}
                </div>
                {{ app.user.username }}
            </button>
        {% endif %}

        <a class="" href="{{ path('delegation_index') }}"><i
                    class="bi bi-person-plus"></i> {{ 'delegations' | trans }}</a>
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ADMIN_RESTRICTED') %}
            <a class="" href="{{ path('admin') }}"><i
                        class="bi bi-sliders"></i> {{ 'admin' | trans }}</a>
        {% endif %}
        <a href="{{ path('user_edit_by_user') }}" class="-item">
            <i class="bi bi-person-lines-fill"></i>
            {{ 'profile' | trans }}
        </a>
        <a class="" href="{{ path('category_request') }}"><i
                    class="bi bi-inboxes"></i> {{ 'categories.request' | trans }}</a>
        <a class="" href="{{ path('notification') }}"><i
                    class="bi bi-circle"></i> {{ 'notifications' | trans }}</a>
        <a class="" href="{{ path('app_logout') }}"><i
                    class="bi bi-box-arrow-right"></i> {{ 'logout' | trans }}</a>
    </div>
{% endif %}


<div class="d-flex justify-content-center align-content-center">
    <h1 class="align-content-center justify-content-center main-header-text">
        <a href="{{ path('homepage') }}">
            {% if website.title %}
                {{ website.title }}
            {% else %}
                AGORA EX MACHINA
            {% endif %}
        </a>
    </h1>

</div>