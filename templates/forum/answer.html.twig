{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-fluid">
		<div class="row">


			{% include 'forum/workshop-menu.html.twig' %}

			<div class="row">
					<div class="col-12">
						<h4>{{ 'add' | trans }} {{ 'forum' | trans | lower }}</h4>
						<div class="card">
							<div class="card-body">
								<div class="row">
									<div class="col-12">
										<div class="alert alert-secondary">
											<blockquote class="blockquote">
												<p class="mb-0">{{ form.vars.value.parentForum.name | raw}}</p>
												<p class="mb-0">{{ form.vars.value.parentForum.description | raw}}</p>
												<footer class="blockquote-footer">{{ 'from' | trans}} {{ form.vars.value.parentForum.user.username }}</footer>
											</blockquote>

										</div>
										{% form_theme form 'bootstrap_4_layout.html.twig' %}
										{{ form(form) }}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
		</div>
	</div>
{% endblock %}
